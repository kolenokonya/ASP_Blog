@model ASP_Blog.ViewModels.Roles.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserName</h2>

<form asp-controller="Roles" asp-action="EditRole" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div>
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>
    <input type="submit" value="Сохранить" />
</form>