<!DOCTYPE html>

<html>
<head>

    @await Html.PartialAsync("MetatagsPartial")

</head>
<body>

    @await Html.PartialAsync("HeaderPartial")

    <div align="center">
        <form method="get" asp-controller="Home" asp-action="Index">
            <div class="form-inline form-group">
                <label class="control-label">Заголовок:</label>
                <input type="text" name="tema" min="1" class="form-control" />
                <label class="control-label">Содержание:</label>
                <input type="text" name="soderzh" class="form-control" />
                <input type="submit" value="Поиск" class="btn btn-success" />
            </div>
        </form>
        <table border="1" width="1200" height="800" bgcolor="DodgerBlue" cellpadding="0" cellspacing="0">
            <tr>
                <td valign="top">@RenderBody()</td>
            </tr>
        </table>
    </div>

    @await Html.PartialAsync("BottomPartial")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
